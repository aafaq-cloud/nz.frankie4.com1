<div class="section m-mb-0 section-about-us-page-group">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="section-line mti-40 mbi-10 show-for-medium"></div>
            <div class="section-line-mobile m-mb-0 m-mt-0 show-for-small-only"></div>
            <div class="text-section text-center m-mt-20 mbi-0 m-mb-20">
                <h1 style="margin-bottom: 30px">{{section.settings.section_title}}</h1>
                <p class="show-for-medium" style="padding-left: 30px; padding-right: 30px;">{{section.settings.section_paragraph}}</p>
                <p class="show-for-small-only" style="padding-left: 10px; padding-right: 10px;">{{section.settings.section_paragraph}}</p>
                <span><h5><a href="{{section.settings.link}}">{{section.settings.link_name}}</a></h5></span>
            </div>
        </div>
    </div>
</div>

{% schema %}
     {
         "name": "Text Section",
         "settings": [
            {
                "type": "text",
                "id": "section_title",
                "label": "Title 1"
            },
            {
                "type": "textarea",
                "id": "section_paragraph",
                "label": "Paragraph 1"
            },
            {
                "type": "text",
                "id": "link_name",
                "label": "Link Section Text"
            },
            {
                "type": "text",
                "id": "link",
                "label": "Link Section"
            }
        ]
     }
{% endschema %}
