<div data-autoload-class="CustomerAddressesSection" class="section section-customer-addresses">
    <div class="grid-container">

        <div id="EditAddresses">

            {% paginate customer.addresses by 6 %}

                <h2 class="mb-40">{{ 'customer.addresses.title' | t }}</h2>

                <div class="grid-x grid-margin-x grid-margin-y align-left">

                    {% for address in customer.addresses %}
                        <div class="cell medium-6 large-4">
                            <div class="existing-customer-address" id="AddressContainer_{{ address.id }}">

                                <h5 class="mb-15">{{ address.name }}</h5>

                                {{ address | format_address }}

                                <button type="button" class="address-edit-toggle" data-form-id="{{ address.id }}">
                                    {% include 'icon-edit' %}
                                    {{ 'customer.addresses.edit' | t }}
                                </button>
                                <button type="button" class="address-delete" data-form-id="{{ address.id }}"
                                        data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                                    {% include 'icon-delete' %}
                                    {{ 'customer.addresses.delete' | t }}
                                </button>

                            </div>
                        </div>
                    {% endfor %}

                </div>


                {% if paginate.pages > 1 %}
                    {% include 'pagination' %}
                {% endif %}


            {% endpaginate %}

            <div class="button-group mt-40">
                <div class="inside">
                    <a class="button button-hollow" href="/account">{{ 'customer.account.return' | t }}</a>
                    <button type="button" class="button button-primary address-new-toggle">{{ 'customer.addresses.add_new' | t }}</button>
                </div>
            </div>

        </div>

        {% paginate customer.addresses by 6 %}

            {% for address in customer.addresses %}
                <div id="EditAddress_{{ address.id }}" class="edit-customer-address grid-x hide">

                    <div class="cell large-8 form-box">

                        {% form 'customer_address', address %}

                            <h2 class="mb-30">{{ 'customer.addresses.edit_address' | t }}</h2>

                            <div class="grid-x grid-margin-x">

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressFirstName_{{ form.id }}">
                                        {{ 'customer.addresses.first_name' | t }}
                                    </label> <input type="text"
                                                    name="address[first_name]"
                                                    id="AddressFirstName_{{ form.id }}"
                                                    placeholder=" {{ 'customer.addresses.first_name' | t }}"
                                                    value="{{ form.first_name }}"
                                                    autocapitalize="words">
                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressLastName_{{ form.id }}">
                                        {{ 'customer.addresses.last_name' | t }}
                                    </label> <input type="text"
                                                    name="address[last_name]"
                                                    id="AddressLastName_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.last_name' | t }}"
                                                    value="{{ form.last_name }}"
                                                    autocapitalize="words">
                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressCompany_{{ form.id }}">
                                        {{ 'customer.addresses.company' | t }}
                                    </label> <input type="text"
                                                    name="address[company]"
                                                    id="AddressCompany_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.company' | t }}"
                                                    value="{{ form.company }}"
                                                    autocapitalize="words">
                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressAddress1_{{ form.id }}">
                                        {{ 'customer.addresses.address1' | t }}
                                    </label> <input type="text"
                                                    name="address[address1]"
                                                    id="AddressAddress1_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.address1' | t }}"
                                                    value="{{ form.address1 }}"
                                                    autocapitalize="words">

                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressAddress2_{{ form.id }}">
                                        {{ 'customer.addresses.address2' | t }}
                                    </label> <input type="text"
                                                    name="address[address2]"
                                                    id="AddressAddress2_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.address2' | t }}"
                                                    value="{{ form.address2 }}"
                                                    autocapitalize="words">
                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressCity_{{ form.id }}">
                                        {{ 'customer.addresses.city' | t }}
                                    </label> <input type="text"
                                                    name="address[city]"
                                                    id="AddressCity_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.city' | t }}"
                                                    value="{{ form.city }}"
                                                    autocapitalize="words">
                                </div>

                                <div class="cell medium-6">
                                    <label for="AddressCountry_{{ form.id }}">
                                        {{ 'customer.addresses.country' | t }}
                                    </label>
                                    <div class="select-wrap">
                                        {% include 'icon-chevron-down-bold' %}

                                        <select
                                                name="address[country]"
                                                id="AddressCountry_{{ form.id }}"
                                                class="address-country-option"
                                                data-form-id="{{ form.id }}"
                                                data-default="{{ form.country }}">
                                            {{ country_option_tags }}
                                        </select>
                                    </div>
                                </div>
                                <div class="cell medium-6">
                                    <div id="AddressProvinceContainer_{{ form.id }}" style="display: none">
                                        <label for="AddressProvince_{{ form.id }}">
                                            {{ 'customer.addresses.province' | t }}
                                        </label>
                                        <div class="select-wrap">
                                            {% include 'icon-chevron-down-bold' %}

                                            <select
                                                    name="address[province]"
                                                    id="AddressProvince_{{ form.id }}"
                                                    data-default="{{ form.province }}">

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressZip_{{ form.id }}">
                                        {{ 'customer.addresses.zip' | t }}
                                    </label> <input type="text"
                                                    name="address[zip]"
                                                    id="AddressZip_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.zip' | t }}"
                                                    value="{{ form.zip }}"
                                                    autocapitalize="characters">
                                </div>

                                <div class="cell medium-6">
                                    <label class="hide" for="AddressPhone_{{ form.id }}">
                                        {{ 'customer.addresses.phone' | t }}
                                    </label> <input type="tel"
                                                    name="address[phone]"
                                                    id="AddressPhone_{{ form.id }}"
                                                    placeholder="{{ 'customer.addresses.phone' | t }}"
                                                    value="{{ form.phone }}"
                                                    pattern="[0-9\-]*">
                                </div>

                                <div class="cell">
                                    <div class="checkbox-wrap">
                                        {{ form.set_as_default_checkbox }}
                                        <label for="address_default_address_{{ form.id }}">
                                            {{ 'customer.addresses.set_default' | t }}
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="button-group align-right mt-40">
                                <div class="inside">
                                    <button type="button" class="button button-hollow address-edit-toggle" data-form-id="{{ form.id }}">
                                        {{ 'customer.addresses.cancel' | t }}
                                    </button>
                                    <input type="submit" class="button button-primary" value="{{ 'customer.addresses.update' | t }}">
                                </div>
                            </div>

                        {% endform %}

                    </div>
                </div>
            {% endfor %}
        {% endpaginate %}

        <div id="AddressNewForm" class="grid-x hide">

            <div class="cell large-8 form-box">
                {% form 'customer_address', customer.new_address %}

                    <h2 class="mb-30">{{ 'customer.addresses.add_new_title' | t }}</h2>

                    <div class="grid-x grid-margin-x grid-margin-y">
                        <div class="cell medium-6">
                            <label class="hide" for="AddressFirstName_{{ form.id }}">
                                {{ 'customer.addresses.first_name' | t }}
                            </label>
                            <input type="text"
                                   name="address[first_name]"
                                   id="AddressFirstNameNew"
                                   placeholder="{{ 'customer.addresses.first_name' | t }}"
                                   value="{{ form.first_name }}"
                                   autocapitalize="words">

                        </div>
                        <div class="cell medium-6">
                            <label class="hide" for="AddressLastName_{{ form.id }}">
                                {{ 'customer.addresses.last_name' | t }}
                            </label>
                            <input type="text"
                                   name="address[last_name]"
                                   id="AddressLastNameNew"
                                   placeholder="{{ 'customer.addresses.last_name' | t }}"
                                   value="{{ form.last_name }}"
                                   autocapitalize="words">
                        </div>
                        <div class="cell medium-6">
                            <label class="hide" for="AddressCompany_{{ form.id }}">
                                {{ 'customer.addresses.company' | t }}
                            </label>
                            <input type="text"
                                   name="address[company]"
                                   id="AddressCompanyNew"
                                   placeholder="{{ 'customer.addresses.company' | t }}"
                                   value="{{ form.company }}"
                                   autocapitalize="words">
                        </div>
                        <div class="cell medium-6">
                            <label class="hide" for="AddressAddress1_{{ form.id }}">
                                {{ 'customer.addresses.address1' | t }}
                            </label>
                            <input type="text"
                                   name="address[address1]"
                                   id="AddressAddress1New"
                                   placeholder="{{ 'customer.addresses.address1' | t }}"
                                   value="{{ form.address1 }}"
                                   autocapitalize="words">
                        </div>
                        <div class="cell medium-6">
                            <label class="hide" for="AddressAddress2_{{ form.id }}">
                                {{ 'customer.addresses.address2' | t }}
                            </label>
                            <input type="text"
                                   name="address[address2]"
                                   id="AddressAddress2New"
                                   placeholder="{{ 'customer.addresses.address2' | t }}"
                                   value="{{ form.address2 }}"
                                   autocapitalize="words">
                        </div>
                        <div class="cell medium-6">
                            <label class="hide" for="AddressCity_{{ form.id }}">
                                {{ 'customer.addresses.city' | t }}
                            </label>
                            <input type="text"
                                   name="address[city]"
                                   id="AddressCityNew"
                                   placeholder="{{ 'customer.addresses.city' | t }}"
                                   value="{{ form.city }}"
                                   autocapitalize="words">
                        </div>
                        <div class="cell medium-6">
                            <label for="AddressCountryNew">
                                {{ 'customer.addresses.country' | t }}
                            </label>
                            <div class="select-wrap">
                                {% include 'icon-chevron-down-bold' %}

                                <select
                                        name="address[country]"
                                        id="AddressCountryNew"
                                        data-default="{{ form.country }}">
                                    {{ country_option_tags }}
                                </select>
                            </div>
                        </div>
                        <div class="cell medium-6">
                            <div id="AddressProvinceContainerNew" style="display: none">
                                <label for="AddressProvinceNew">
                                    {{ 'customer.addresses.province' | t }}
                                </label>
                                <div class="select-wrap">
                                    {% include 'icon-chevron-down-bold' %}

                                    <select
                                            name="address[province]"
                                            id="AddressProvinceNew"
                                            data-default="{{ form.province }}">
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="cell medium-6">
                            <label class="hide" for="AddressZip_{{ form.id }}">
                                {{ 'customer.addresses.zip' | t }}
                            </label>
                            <input type="text"
                                   name="address[zip]"
                                   id="AddressZipNew"
                                   placeholder="{{ 'customer.addresses.zip' | t }}"
                                   value="{{ form.zip }}"
                                   autocapitalize="characters">
                        </div>
                        <div class="cell medium-6">
                            <label class="hide" for="AddressPhone_{{ form.id }}">
                                {{ 'customer.addresses.phone' | t }}
                            </label>
                            <input type="tel"
                                   name="address[phone]"
                                   id="AddressPhoneNew"
                                   placeholder="{{ 'customer.addresses.phone' | t }}"
                                   value="{{ form.phone }}"
                                   pattern="[0-9\-]*">
                        </div>

                        <div class="cell">
                            <div class="checkbox-wrap">
                                {{ form.set_as_default_checkbox }}
                                <label for="address_default_address_new">
                                    {{ 'customer.addresses.set_default' | t }}
                                </label>
                            </div>
                        </div>

                    </div>

                    <div class="button-group align-right mt-40">
                        <div class="inside">
                            <button type="button" class="address-new-toggle button button-hollow">
                                {{ 'customer.addresses.cancel' | t }}
                            </button>
                            <input type="submit" class="button button-primary" value="{{ 'customer.addresses.add' | t }}">
                        </div>
                    </div>

                {% endform %}

            </div>
        </div>

    </div>
</div>
