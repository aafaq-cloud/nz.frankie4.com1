<div class="section section-healing-heels-quote">
  <div class="grid-container">
    <div class="grid-x grid-margin-x align-middle">

      <div class="cell small-12 large-6">
        <div class="section-line"></div>
        <div class="text-center">
          <div class="quote-icon">{% render 'icon-quote' %}</div>
          <p class="quote-text">{{ section.settings.content }}</p>
          <div class="quote-attribution"><strong>{{ section.settings.person }}</strong> <br> {{ section.settings.position }}</div>
          <div class="quote-icon">{% render 'icon-quote' %}</div>
        </div>
        <div class="section-line"></div>
      </div>

      <div class="cell small-12 large-6">
        <div class="quote-image"
             style="background-image: url({{ section.settings.image | img_url: '600x' }});">
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Healing Heels Quote",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "person",
      "label": "Person"
    },
    {
      "type": "text",
      "id": "position",
      "label": "Position"
    }
  ]
}
{% endschema %}
