<div class="section section-customer-reset-password section-customer-form">
    <div class="grid-container">
        <div class="grid-x">
            <div class="cell medium-8 large-6">

                <div class="form-box">
                    <div id="CustomerLoginForm" class="customer-login">
                        <h2>{{ 'customer.reset_password.title' | t }}</h2>
                        <p class="mb-30">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

                        {% form 'reset_customer_password' %}


                            <input type="password"
                                            name="customer[password]"
                                            id="ResetPassword"
                                            class="mb-20 {% if form.errors contains 'password' %}input-error{% endif %}"
                                            placeholder="{{ 'customer.reset_password.password' | t }}">

                            <input type="password"
                                            name="customer[password_confirmation]"
                                            id="PasswordConfirmation"
                                            class="{% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
                                            placeholder="{{ 'customer.reset_password.password_confirm' | t }}">

                            {{ form.errors | default_errors }}

                            <div class="button-group mt-40 align-right">
                                <input type="submit" class="button button-primary" value="{{ 'customer.reset_password.submit' | t }}">
                            </div>
                        {% endform %}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
