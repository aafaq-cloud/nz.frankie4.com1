<div class="section section-about-us-page-group">

    <div class="section mti-0 mbi-0 m-auto" style="max-width: 2000px;">
        <div class="cell-image cell medium-auto landing-image" 
            style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}');">
                <div class="text-center landing-text">
                    <h1>{{section.settings.section_main_title}}</h1>
                    <h4>{{section.settings.section_subtitle}}</h4>
                </div>
        </div>
    </div>

    <div class="section m-mb-0">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="section-line mti-50 mbi-20 m-mb-0 m-mt-0"></div>
                <div class="text-center m-mt-20 m-mb-0" style="width: 1100px; margin: 40px 10% 20px 10%;">
                    <h1 style="margin-bottom: 30px">{{section.settings.section_title}}</h1>
                    <p>{{section.settings.section_paragraph}}</p>
                </div>
                <div class="cell-image cell medium-auto image-full-width" 
                    style="background-image: url('{{section.settings.image_2 | img_url: '1400x'}}');">
                </div>
            </div>
        </div>
    </div>

    {% if section.settings.store_info_check %}
    <div class="section m-mt-0">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left wide-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}');">
                    </div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right">
                    <div class="section-line mti-30 mbi-20 m-mb-20 m-mt-30"></div>
                    <div class="text-center">
                        <h1>{{section.settings.section_title_2}}</h1>
                        <p>{{section.settings.section_paragraph_2}}</p>
                        <span><h5><a href="{{section.settings.link1}}">{{section.settings.link1_name}}</a></h5></span>
                    </div>
                    <div class="section-line mti-40 mbi-20 m-mb-10 m-mt-30"></div>
                    <div class="mobile-screen-only" style="height: 20px;"></div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-left mobile-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}');">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if section.settings.store_shopper_check %}
    <div class="section m-mb-0">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left">
                    <div class="wide-screen-only" style="height: 50px;"></div>
                    <div class="text-center">
                        <h1 class="wide-screen-only" style="font-size: 78px; letter-spacing: -3px;">{{section.settings.section_title_3}}</h1>
                        <h1 class="mobile-screen-only">{{section.settings.section_title_3}}</h1>
                        <p>{{section.settings.section_paragraph_3}}</p>
                        <span><h5><a href="{{section.settings.link2}}">{{section.settings.link2_name}}</a></h5></span>
                    </div>
                    <div class="mobile-screen-only" style="height: 20px;"></div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_4 | img_url: '1400x'}}');">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="section">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left wide-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}');">
                    </div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right">
                    <div class="section-line mti-40 mbi-30 m-mt-0 m-mb-10"></div>
                    <div class="text-center">
                        <h1>{{section.settings.section_title_4}}</h1>
                        <p>{{section.settings.section_paragraph_4}}</p>
                        <span>
                            <p>
                                {{section.settings.phone_number}}
                                <b><a href="{{section.settings.email_link}}">{{section.settings.email}}</a></b>
                                <b><a href="{{section.settings.link3}}">{{section.settings.link3_name}}</a></b>
                            </p>
                        </span>
                    </div>
                    <div class="section-line mti-40 mbi-30 m-mt-20 m-mb-0"></div>
                    <div class="mobile-screen-only" style="height: 20px;"></div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-left mobile-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}');">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section" style="margin-bottom: 60px">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left">
                    <h1 class="text-center" style="padding-bottom: 20px">{{section.settings.section_title_5}}</h1>
                    <div onclick="getElementById('section_a1').style.display = 'block';getElementById('section_a2').style.display = 'none';getElementById('section_a3').style.display = 'none';getElementById('section_a4').style.display = 'none'">
                        <p id="section_q1" class="text-left sections_questions"><b>{{section.settings.section_q1}}</b></p>
                        <p id="section_a1" class="text-left section_answers">{{section.settings.section_a1}}</p>
                        <div class="deco-line-horizontal" style="margin: 0px 0 30px 0"></div>
                    </div>
                    <div onclick="getElementById('section_a1').style.display = 'none';getElementById('section_a2').style.display = 'block';getElementById('section_a3').style.display = 'none';getElementById('section_a4').style.display = 'none'">
                        <p id="section_q2" class="text-left sections_questions"><b>{{section.settings.section_q2}}</b></p>
                        <p id="section_a2" class="text-left section_answers">{{section.settings.section_a2}}</p>
                        <div class="deco-line-horizontal" style="margin: 0px 0 30px 0"></div>
                    </div>
                    <div onclick="getElementById('section_a1').style.display = 'none';getElementById('section_a2').style.display = 'none';getElementById('section_a3').style.display = 'block';getElementById('section_a4').style.display = 'none'">
                        <p id="section_q3" class="text-left sections_questions"><b>{{section.settings.section_q3}}</b></p>
                        <p id="section_a3" class="text-left section_answers">{{section.settings.section_a3}}</p>
                        <div class="deco-line-horizontal" style="margin: 0px 0 30px 0"></div>
                    </div>
                    <div onclick="getElementById('section_a1').style.display = 'none';getElementById('section_a2').style.display = 'none';getElementById('section_a3').style.display = 'none';getElementById('section_a4').style.display = 'block'">
                        <p id="section_q4" class="text-left sections_questions"><b>{{section.settings.section_q4}}</b></p>
                        <p id="section_a4" class="text-left section_answers">{{section.settings.section_a4}}</p>
                        <div class="deco-line-horizontal" style="margin: 0px 0 30px 0"></div>
                    </div>
                    <span><h5><a href="{{section.settings.link4}}">{{section.settings.link4_name}}</a></h5></span>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right wide-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_6 | img_url: '1400x'}}');">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section section-step-inside-slider" data-autoload-class="StepInsideSliderSection">

        <div class="glide slider">
            <div class="glide__arrows mid-screen-show" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<">{% render 'icon-chevron-right' %}</button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">">{% render 'icon-chevron-right' %}</button>
            </div>
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    {% for block in section.blocks %}
                    {% if block.type == 'slide' %}
                        <li class="glide__slide">
                            <div class="step-inside-item">
                                <a href="{{ block.settings.link }}" target="_blank">
                                    <img class="step-inside-item-image"
                                        src="{{ block.settings.image | img_url: '600x600', crop: 'center' }}"
                                        srcset="
                                        {{ block.settings.image | img_url: '300x300', crop: 'center' }} 300w,
                                        {{ block.settings.image | img_url: '400x400', crop: 'center' }} 400w,
                                        {{ block.settings.image | img_url: '500x500', crop: 'center' }} 500w,
                                        {{ block.settings.image | img_url: '600x600', crop: 'center' }} 600w"
                                        sizes="
                                        (min-width: 600px) 60vw,
                                        (min-width: 850px) 50vw,
                                        (min-width: 1024px) 33.3vw,
                                        (min-width: 1200px) 33.3vw,
                                        (min-width: 1400px) 33.3vw,
                                        80vw"
                                        alt="Image for {{ block.settings.title }}"
                                    />
                                    <div class="step-inside-item-content-container" style="padding: 40px 50px 20px 25px">
                                        <div class="step-inside-item-content">
                                            <div class="step-inside-item-content-subtitle">
                                                <h5>{{ block.settings.subtitle }}</h5>
                                            </div>
                                            <h2>{{ block.settings.title }}</h2>
                                        </div>
                                    </div>
                                </a>

                            </div>

                        </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>


    </div>

</div>


