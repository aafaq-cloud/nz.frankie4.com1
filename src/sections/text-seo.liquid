<div class="section section-text-seo">
    <div class="grid-container">
        <div class="color-secondary-text text-center seo_div">
            <div class="seo_text">
                {{ section.settings.content }}
            </div>
            <div id="toggle_btn" onclick="document.getElementById('more_text').style.display = 'block';document.getElementById('toggle_btn').style.display = 'none'">Read more...</div>
            <div id="more_text" class="seo_text" style="display: none">
                {{ section.settings.content_hidden }}
            </div>
        </div>
        <div style="width: 100%; height: 1px; background-color: black; opacity: 0.3; margin-top: 50px"></div>
    </div>
</div>

{% schema %}
    {
        "name": "Text SEO",
        "settings": [
            {
                "id": "content",
                "type": "richtext",
                "label": "Content"
            },
            {
                "id": "content_hidden",
                "type": "richtext",
                "label": "Content Hidden"
            }
        ],
        "presets": [
            {
                "name": "Text SEO",
                "category": "Sections"
            }
        ]
    }
{% endschema %}
