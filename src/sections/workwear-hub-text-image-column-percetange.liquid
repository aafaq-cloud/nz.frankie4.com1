<div class="section m-mb-0 section-about-us-page-group">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="section-line mti-40 mbi-10 m-mb-0 m-mt-0"></div>
            <div class="text-center m-mt-20 m-mb-0 section_text">
                <h1 class="mbi-30">{{section.settings.section_title_4}}</h1>
                <p>{{section.settings.section_paragraph_4}}</p>
            </div>
            <div class="cell small-12 medium-4 large-4 text-center column_div">
                <img class="column_image" src="{{ section.settings.percentage1 | img_url: '500x500', crop: 'center' }}"/>
                <p>{{ section.settings.text1}}</p>
            </div>
            <div class="cell small-12 medium-4 large-4 text-center column_div">
                <img class="column_image" src="{{ section.settings.percentage2 | img_url: '500x500', crop: 'center' }}"/>
                <p>{{ section.settings.text2}}</p>
            </div>
            <div class="cell small-12 medium-4 large-4 text-center column_div">
                <img class="column_image" src="{{ section.settings.percentage3 | img_url: '500x500', crop: 'center' }}"/>
                <p>{{ section.settings.text3}}</p>
            </div>
        </div>
    </div>
</div>
<style>
    .section_text {
        width: 1100px; 
        margin: 40px 10% 20px 10%;
    }

    .column_image {
        width: 200px; 
        height: 200px; 
        max-width: 100%;
    }

    @media only screen and (max-width: 640px) {
        .column_div {
            height: 300px;
        }
    }

    @media only screen and (min-width: 641px) {
        .column_div {
            height: 350px;
        }
    }
</style>

{% schema %}
     {
         "name": "Workwear Hub Section 4",
         "settings": [
            {
                "type": "text",
                "id": "section_title_4",
                "label": "Title Section 4"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_4",
                "label": "Paragraph Section 4"
            },
            {
                "type": "image_picker",
                "id": "percentage1",
                "label": "Percentage Image 1"
            },
            {
                "type": "textarea",
                "id": "text1",
                "label": "Percentage Text 1"
            },
            {
                "type": "image_picker",
                "id": "percentage2",
                "label": "Percentage Image 2"
            },
            {
                "type": "textarea",
                "id": "text2",
                "label": "Percentage Text 2"
            },
            {
                "type": "image_picker",
                "id": "percentage3",
                "label": "Percentage Image 3"
            },
            {
                "type": "textarea",
                "id": "text3",
                "label": "Percentage Text 3"
            }
        ]
     }
 {% endschema %}
