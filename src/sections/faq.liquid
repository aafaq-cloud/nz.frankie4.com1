<div class="section section-faq">
    <div class="grid-container">

    {% if section.blocks !=  blank %}

        <div class="grid-x grid-margin-x grid-margin-y">

            <div class="cell large-10 large-offset-2">

                <div class="grid-x grid-margin-x faq-header">
                    <div class="cell large-4">
                        <h1 class="">{% include 'page-title' %}</h1>
                    </div>

                     <div class="cell large-7 large-offset-1 accordion-quick-links">
                        <h5>Jump to a Category</h5>
                        {% for block in section.blocks %}
                            {% if block.type == 'category_title' %}
                                <a href="#{{ block.settings.title | downcase | replace: ' & ', '-' | replace: ' ', '-'}}">{{ block.settings.title }}</a>
                            {% endif %}
                        {% endfor %}
                     </div>
                </div>

                <div class="faq-listing">
                    {% for block in section.blocks %}

                        {% if block.type == 'category_title' %}
                            <div class="faq-anchor" id="{{ block.settings.title | downcase | replace: ' & ', '-' | replace: ' ', '-' }}"></div>
                            <h4 class="accordion-title" id="">{{ block.settings.title }}</h4>
                        {% endif %}

                        {% if block.type == 'accordion_item' %}
                            {% assign faq_page = pages[block.settings.faq_page] %}
                            <div aria-controls="accordion-item-{{ forloop.index }}" data-autoload-class="ComponentAccordionItem" class="accordion-toggle">
                                <h6 class="accordion-toggle-title">{{faq_page.title}}</h6>
                                <span class="open-icon">{% include 'icon-plus' %}</span>
                                <span class="close-icon">{% include 'icon-minus' %}</span>
                            </div>
                            <div class="grid-x accordion accordion-body rte" id="accordion-item-{{ forloop.index }}" aria-expanded="false">
                                {{ faq_page.content }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

            </div>
        </div>
        {% endif %}
    </div>
</div>


{% schema %}
     {
         "name": "FAQ Accordion",
         "settings": [
         ],
         "blocks": [
             {
                 "type": "category_title",
                 "name": "Category Title",
                 "settings": [
                     {
                         "type": "text",
                         "id": "title",
                         "label":"Title"
                     }
                 ]
             },
             {
                  "type": "accordion_item",
                  "name": "Accordion Item",
                  "settings": [
                      {
                          "type": "page",
                          "id": "faq_page",
                          "label":"FAQ Page"
                      }
                  ]
              }
         ]
     }
 {% endschema %}
