<div class="section mobile-style1">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell small-12 medium-6 large-6 column-left wide-screen-only">
                <div class="cell-image cell medium-auto image-half-width" 
                    style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}');
                    height: 750px;">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-right">
                <div class="section-line mobile-style2 mobile-style5"></div>
                <div class="text-center">
                    <h1>{{section.settings.section_title_1}}</h1>
                    <p>{{section.settings.section_paragraph_1}}</p>
                </div>
                <div class="section-line mobile-style3 mobile-style11"></div>
                <div class="mobile-screen-only" style="height: 20px;"></div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-left mobile-screen-only">
                <div class="cell-image cell medium-auto image-half-width" 
                    style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}'); background-position: bottom">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section mobile-style2">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell small-12 medium-6 large-6 column-left">
                <div class="section-line mobile-style7"></div>
                <div class="text-center">
                    <h1 class="wide-screen-only" style="font-size: 78px; letter-spacing: -3px;">{{section.settings.section_title_2}}</h1>
                    <h1 class="mobile-screen-only">{{section.settings.section_title_2}}</h1>
                    <p>{{section.settings.section_paragraph_2}}</p>
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-right">
                <div class="cell-image cell medium-auto image-half-width mobile-image-height3" 
                    style="background-image: url('{{section.settings.image_2 | img_url: '1400x'}}');
                    height: 750px;
                    background-size: contain;
                    background-repeat: no-repeat">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section" style="background-color: #F5F5F5;">
    <div class="grid-container">
        <div class="grid-x align-middle mobile-style9" style="padding: 80px 0 60px 0">
            <div class="cell small-12 medium-6 large-6 column-left wide-screen-only">
                <div data-autoload-class="ComponentVideo">
                    <video class="lazyload" preload="none" autoplay="" loop="" muted=""
                           playsinline controls="controls"
                           width="100%" height="720px"
                           data-src="{{section.settings.video }}">
                    </video>
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-right">
                <div class="text-center">
                    <h1>{{section.settings.section_title_3}}</h1>
                    <p>{{section.settings.section_paragraph_3}}</p>
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-left mobile-screen-only">
                <div data-autoload-class="ComponentVideo">
                    <video class="lazyload" preload="none" autoplay="" loop="" muted=""
                           playsinline controls="controls"
                           width="100%" height="450px"
                           data-src="{{section.settings.video }}">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
     {
         "name": "High Heels Sliders",
         "settings": [
            {
                "type": "text",
                "id": "section_title_1",
                "label": "Section 1 Title"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_1",
                "label": "Section 1 Content"
            },
            {
                "type": "image_picker",
                "id": "image_1",
                "label": "Image1"
            },
            {
                "type": "text",
                "id": "section_title_2",
                "label": "Section 2 Title"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_2",
                "label": "Section 2 Content"
            },
            {
                "type": "image_picker",
                "id": "image_2",
                "label": "Image2"
            },
            {
                "type": "text",
                "id": "section_title_3",
                "label": "Section 3 Title"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_3",
                "label": "Section 3 Content"
            },
            {
                "id": "video",
                "type": "text",
                "label": "Video",
                "info": "Enter the video source URL. The video must be .mp4 format and hosted publicly."
            }
         ]
     }
 {% endschema %}
