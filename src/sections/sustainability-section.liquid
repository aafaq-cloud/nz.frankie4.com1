<div class="section section-about-us-page-group m-mt-0 mti-0">

    <div class="section mti-0 mbi-0 m-auto" style="max-width: 2000px;">
        <div class="cell-image cell medium-auto landing-image" 
            style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}');">
                <div class="text-center landing-text">
                    <h1>{{section.settings.section_main_title}}</h1>
                    <h4>{{section.settings.section_subtitle}}</h4>
                </div>
        </div>
    </div>

    <div data-autoload-class="WeStandForSection" class="section section-we-stand-for">

        <div class="grid-container mb-40 m-mb-0">
            <div class="grid-x align-center text-center">
            <div class="cell">
                <h2 class="h1 mb-20 m-mt-40 m-mb-30" style="margin-top: 80px;">{{ section.settings.section_title_extra}}</h2>
            </div>
            </div>
        </div>

        <div class="grid-container">

            <div class="tab-titles">
            <div class="glide tab-slider">
                <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    {% assign tabIndex = 1 %}
                    {% for block in section.blocks %}

                    {% if block.type == 'tab_title' %}
                        <li class="glide__slide">
                            <div class="tab-title-container">
                            <div class="tab-title{% if tabIndex == 1 %} active{% endif %}" data-tab-index="{{ tabIndex }}">
                                <div class="tab-title-container">
                                <img class="tab-title-image" src="{{ block.settings.image | img_url: '500x500', crop: 'center' }}"/>
                                <div class="tab-title-content-container" style="padding: 30px 50px 15px 25px">
                                    <div class="tab-title-content">
                                    <h2>{{ block.settings.title }}</h2>
                                    </div>
                                </div>
                                </div>

                            </div>
                            </div>
                        </li>
                        {% assign tabIndex = tabIndex | plus: 1 %}
                    {% endif %}

                    {% endfor %}
                </ul>
                </div>
            </div>

            </div>

        </div>


        {% comment %}
            Tab Content
        {% endcomment %}
        <div class="grid-container">

            <div class="grid-x">
            <div class="cell large-12">

                <div class="tab-content m-mt-30 m-mb-20 padding-0">
                {% assign tabContentIndex = 1 %}

                {% assign slideTitles = '' %}

                {% for block in section.blocks %}

                    {% if block.type == 'slider_start' %}

                    {% assign slideTitles = '' %}
                    <div class="tab-content-item{% if tabContentIndex == 1 %} active{% endif %}" data-tab-content-index="{{ tabContentIndex }}">
                    <div class="glide slider">
                        <div class="glide__track" data-glide-el="track">
                        <ul class="glide__slides">
                    {% assign tabContentIndex = tabContentIndex | plus: 1 %}

                    {% endif %}

                    {% if block.type == 'slider_end' %}

                        </ul>
                        </div>
                        <div class="glide__bullets mobile-bullet" data-glide-el="controls[nav]">
                        {% assign slides = slideTitles | split: ',' %}
                        {% for bullet in slides %}
                            <button class="glide__bullet text-left" style="background: none; color: black" data-glide-dir="={{ forloop.index0 }}">
                            <span></span>
                            {{bullet}}
                            </button>
                        {% endfor %}
                        </div>
                    </div>

                    </div>

                    {% endif %}

                    {% if block.type == 'tab_content' %}

                    <li class="glide__slide">

                        <div class="grid-x grid-margin-x grid-margin-y">
                            <div class="cell medium-12 large-6 tab-content-item-media {{ block.settings.image_placement }}">

                            {% if block.settings.video_url != blank %}
                                {% assign videoId = block.settings.video_url.id %}
                                <div class="video-container">
                                <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ videoId }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                            {% else %}
                                <img src="{{ block.settings.image | img_url: '700x560', crop: 'center' }}"/>
                            {% endif %}

                            </div>
                            <div class="cell medium-12 large-6">
                            <h2 class="h1-1">{{ block.settings.title }}</h2>
                            <div>{{ block.settings.content }}</div>
                            {% if block.settings.link != blank %}
                            <a class="tab-content-item-link" href="{{ block.settings.link }}" style="text-transform: none;">{{ block.settings.button_text }}</a>
                            {% endif %}
                            </div>
                        </div>

                    </li>

                    {% unless slideTitles == '' %}
                        {% assign slideTitles = slideTitles | append: ',' %}
                    {% endunless %}
                    {% assign slideTitles = slideTitles | append: block.settings.title %}

                    {% endif %}

                {% endfor %}

                </div>
            </div>

            </div>

        </div>
    </div>

    {% comment %} <div class="section mbi-60 m-mb-0">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="section-line mti-40 m-mb-0 m-mt-0"></div>
                <div class="text-center m-mt-20 text-section">
                        <h1 class="mbi-30">{{section.settings.section_title}}</h1>
                        <p>{{section.settings.section_paragraph}}</p>
                </div>
                <div class="cell-image cell medium-auto image-full-width" 
                    style="background-image: url('{{section.settings.image_2 | img_url: '1400x'}}');">
                </div>
            </div>
        </div>
    </div> {% endcomment %}

    {% if section.settings.section_hide %}
    <div class="section grey-section" style="max-width: 2000px; margin: 30px auto 30px auto;">
        <div class="grid-container" style="margin: 0 auto 0 auto;">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left mti-30">
                    <div>
                        <h4 class="text-center">{{section.settings.section_subtitle_2}}</h4>
                        <h1 class="text-center m-mb-30" style="margin-bottom: 60px;">{{section.settings.section_title_2}}</h1>
                        <p class="text-left">{{section.settings.section_2_p1}}</p>
                    </div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right">
                    <div class="cell-image cell medium-auto image-half-width wide-screen-only" 
                        style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}');
                        height: 800px;">
                    </div>
                    <div class="cell-image cell medium-auto image-half-width mobile-screen-only m-mb-30" 
                        style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}');
                        height: 300px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="section m-mt-0 {% unless section.settings.section_hide %}grey-section mti-20{% else %}mti-60{% endunless %}">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left wide-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_4 | img_url: '1400x'}}');
                        height: 800px">
                    </div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right">
                    <div>
                        <h1 class="text-center mti-40 mbi-40 m-mt-20 m-mb-40">{{section.settings.section_title_3}}</h1>
                        {{section.settings.section_paragraph_3}}
                        <span><h5><a href="{{section.settings.link3}}">{{section.settings.link3_name}}</a></h5></span>
                    </div>
                </div>
                <div class="cell small-12 medium-6 large-6 column-left mobile-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_4 | img_url: '1400x'}}');">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section {% if section.settings.section_hide %}grey-section{% endif %}" style="margin-bottom: 60px">
        <div class="grid-container">
            <div class="grid-x align-middle">
                <div class="cell small-12 medium-6 large-6 column-left">
                    <h1 class="text-center" style="padding-top: 40px; padding-bottom: 20px">{{section.settings.section_title_4}}</h1>
                    <div onclick="getElementById('section_a1').style.display = 'block';getElementById('section_a2').style.display = 'none';getElementById('section_a3').style.display = 'none'">
                        <p id="section_q1" class="text-left sections_questions"><b>{{section.settings.section_q1}}</b></p>
                        <p id="section_a1" class="text-left section_answers">{{section.settings.section_a1}}</p>
                        <div class="deco-line-horizontal"></div>
                    </div>
                    <div onclick="getElementById('section_a1').style.display = 'none';getElementById('section_a2').style.display = 'block';getElementById('section_a3').style.display = 'none'">
                        <p id="section_q2" class="text-left sections_questions"><b>{{section.settings.section_q2}}</b></p>
                        <p id="section_a2" class="text-left section_answers">{{section.settings.section_a2}}</p>
                        <div class="deco-line-horizontal"></div>
                    </div>
                    <div onclick="getElementById('section_a1').style.display = 'none';getElementById('section_a2').style.display = 'none';getElementById('section_a3').style.display = 'block'">
                        <p id="section_q3" class="text-left sections_questions"><b>{{section.settings.section_q3}}</b></p>
                        <p id="section_a3" class="text-left section_answers">{{section.settings.section_a3}}</p>
                        <div class="deco-line-horizontal"></div>
                    </div>
                    <span><h5 style="padding-top: 20px; padding-bottom: 40px"><a href="{{section.settings.link4}}">{{section.settings.link4_name}}</a></h5></span>
                </div>
                <div class="cell small-12 medium-6 large-6 column-right wide-screen-only">
                    <div class="cell-image cell medium-auto image-half-width" 
                        style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}');">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section section-step-inside-slider" data-autoload-class="StepInsideSliderSection">

        <div class="glide slider">
            <div class="glide__arrows mid-screen-show" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<">{% render 'icon-chevron-right' %}</button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">">{% render 'icon-chevron-right' %}</button>
            </div>
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    {% for block in section.blocks %}
                    {% if block.type == 'slide' %}
                        <li class="glide__slide">
                            <div class="step-inside-item">
                                <a href="{{ block.settings.link }}" target="_blank">
                                    <img class="step-inside-item-image"
                                        src="{{ block.settings.image | img_url: '600x600', crop: 'center' }}"
                                        srcset="
                                        {{ block.settings.image | img_url: '300x300', crop: 'center' }} 300w,
                                        {{ block.settings.image | img_url: '400x400', crop: 'center' }} 400w,
                                        {{ block.settings.image | img_url: '500x500', crop: 'center' }} 500w,
                                        {{ block.settings.image | img_url: '600x600', crop: 'center' }} 600w"
                                        sizes="
                                        (min-width: 600px) 60vw,
                                        (min-width: 850px) 50vw,
                                        (min-width: 1024px) 33.3vw,
                                        (min-width: 1200px) 33.3vw,
                                        (min-width: 1400px) 33.3vw,
                                        80vw"
                                        alt="Image for {{ block.settings.title }}"
                                    />
                                    <div class="step-inside-item-content-container" style="padding: 40px 50px 20px 25px">
                                        <div class="step-inside-item-content">
                                            <div class="step-inside-item-content-subtitle">
                                                <h5>{{ block.settings.subtitle }}</h5>
                                            </div>
                                            <h2>{{ block.settings.title }}</h2>
                                        </div>
                                    </div>
                                </a>

                            </div>

                        </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>


    </div>

</div>


