            </a>
          </li>

          {% if shop.customer_accounts_enabled %}
            <li class="toolbar-item hide-for-mobile-navigation">
              <a href="/account" class="toolbar-item-inner">
                  {% include 'icon-user' %}
              </a>
              <div class="toolbar-item__dropdown">
                {% if customer %}
                  <div class="button-group stacked">
                    <a class="button button-primary button-small"
                       href="/account">{{ 'layout.customer.view_account' | t }}</a>
                    <a class="button button-primary button-small"
                       href="/account/logout">{{ 'layout.customer.log_out' | t }}</a>
                  </div>
                {% else %}
                  <div class="button-group stacked">
                    <a class="button button-primary button-small"
                       href="/account/register">{{ 'layout.customer.create_account' | t }}</a>
                    <a class="button button-primary button-small"
                       href="/account/login">{{ 'layout.customer.log_in' | t }}</a>
                  </div>
                {% endif %}
              </div>
            </li>
          {% endif %}

          <li class="toolbar-item">

                {% include 'interactive-cart' %}
                {% comment %}
                {{ cart.item_count }}
                {% endcomment %}
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <div class="main-bar hide-for-mobile-navigation">

    <div class="grid-container h-100">

      <div class="main-bar-wrapper">

        <div class="main-bar-top">
          <div class="header-logo">
            <div class="header-logo-inner">
              <a href="/">
                  {% if section.settings.logo != blank %}
                    <img src="{{ section.settings.logo | img_url: '400x200' }}" alt="logo"/>
                  {% else %}
                    <span class="header-logo-text">{{ shop.name }}</span>
                  {% endif %}
              </a>
            </div>
          </div>
        </div>

        <div class="main-bar-bottom">
            {% include 'navigation' %}
        </div>
      </div>

    </div>
  </div>

  {% include 'navigation-mobile' %}

</header>

