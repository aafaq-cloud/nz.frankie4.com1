<header data-autoload-class="HeaderSection" data-section-id="{{ section.id }}" class="site-header" data-section-type="header-section">
  {% include 'promo-strip' %}
  <div class="toolbar">
    <div class="toolbar-wrapper grid-container h-100">

      <div class="grid-x align-middle align-justify h-100">

        <nav class="toolbar-items-left toolbar-items cell shrink show-for-medium">
          <ul class="grid-x top-nav align-middle text-small">
            {% for link in linklists[section.settings.top_linklist].links %}
              <li>
                <a href="{{link.url}}">{{link.title | escape }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>

        <div class="header-logo cell auto">
          <div class="header-logo-inner">
            <a href="/">
                {% if section.settings.logo != blank %}
                  <img src="{{ section.settings.logo | img_url: '400x200' }}" alt="logo"/>
                {% else %}
                  <span class="header-logo-text">{{ shop.name }}</span>
                {% endif %}
            </a>
          </div>
        </div>

        <ul class="align-right toolbar-items-right toolbar-items cell shrink">
          <li class="toolbar-item hide-for-mobile-navigation">
            {% include 'currency-picker' %}
          </li>
          <li class="toolbar-item toolbar-item-search">
            <button aria-label="{{ 'general.search.placeholder' | t }}" class="search-focusser toolbar-item-inner">{% include "icon-search" %}</button>
            {% include 'search-autocomplete' %}
          </li>
          <li class="toolbar-item">
            <a href="/pages/wishlist" data-shopify-wishlist-link class="toolbar-item-inner wishlist-link">
                {% include 'icon-heart' %}
            </a>
          </li>

          {% if shop.customer_accounts_enabled %}
            <li class="toolbar-item hide-for-mobile-navigation">
              <a href="/account" class="toolbar-item-inner">
                  {% include 'icon-user' %}
              </a>
              <div class="toolbar-item__dropdown">
                {% if customer %}
                  <div class="button-group stacked">
                    <a class="button button-primary button-small"
                       href="/account">{{ 'layout.customer.view_account' | t }}</a>
                    <a class="button button-primary button-small"
                       href="/account/logout">{{ 'layout.customer.log_out' | t }}</a>
                  </div>
                {% else %}
                  <div class="button-group stacked">
                    <a class="button button-primary button-small"
                       href="/account/register">{{ 'layout.customer.create_account' | t }}</a>
                    <a class="button button-primary button-small"
                       href="/account/login">{{ 'layout.customer.log_in' | t }}</a>
                  </div>
                {% endif %}
              </div>
            </li>
          {% endif %}

          <li class="toolbar-item">

                {% include 'interactive-cart' %}
                {% comment %}
                {{ cart.item_count }}
                {% endcomment %}
            </a>
          </li>
          <li class="toolbar-item show-for-mobile-navigation">
            <button class="toolbar-item-inner js-mobile-nav-toggle" aria-label="Open Mobile Menu">
                {% include 'icon-hamburger' %}
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <div class="main-bar hide-for-mobile-navigation">

    <div class="grid-container h-100">

      <div class="main-bar-wrapper">

        <div class="main-bar-top">
          <div class="header-logo">
            <div class="header-logo-inner">
              <a href="/">
                  {% if section.settings.logo != blank %}
                    <img src="{{ section.settings.logo | img_url: '400x200' }}" alt="logo"/>
                  {% else %}
                    <span class="header-logo-text">{{ shop.name }}</span>
                  {% endif %}
              </a>
            </div>
          </div>
        </div>

        <div class="main-bar-bottom">
            {% include 'navigation' %}
        </div>
      </div>

    </div>
  </div>

  {% include 'navigation-mobile' %}

</header>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "header",
        "content": "Menus"
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Main Menu",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "top_linklist",
        "label": "Top Menu"
      },
      {
        "type": "header",
        "content": "Mega Menu"
      },
      {
        "type": "text",
        "id": "mega_menu_handle",
        "label": "Mega Menu Name",
        "info": "Enter the top level menu item name to attach the mega menu to. Leave blank to disable mega menu."
      },
      {
        "type": "image_picker",
        "id": "mega_menu_image_1",
        "label": "Image 1"
      },
      {
        "id": "mega_menu_image_url_1",
        "type": "url",
        "label": "Image 1 Link"
      },
      {
        "type": "image_picker",
        "id": "mega_menu_image_2",
        "label": "Image 2"
      },
      {
        "id": "mega_menu_image_url_2",
        "type": "url",
        "label": "Image 2 Link"
      }
    ]
  }
{% endschema %}


<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Organization",
  "name": "{{ shop.name }}",
  {% if section.settings.logo %}
    {% assign image_size = section.settings.logo.width | append:'x' %}
    "logo": "https:{{ section.settings.logo | img_url: image_size }}",
  {% endif %}
  "sameAs": [
    "{{ settings.social_twitter_link }}",
    "{{ settings.social_facebook_link }}",
    "{{ settings.social_pinterest_link }}",
    "{{ settings.social_instagram_link }}",
    "{{ settings.social_tumblr_link }}",
    "{{ settings.social_snapchat_link }}",
    "{{ settings.social_youtube_link }}",
    "{{ settings.social_vimeo_link }}"
  ],
  "url": "{{ shop.url }}{{ page.url }}"
}
</script>

{% if template.name == 'index' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": "{{ shop.name }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "url": "{{ shop.url }}{{ page.url }}"
    }
  </script>
{% endif %}
