<div class="section section-instagram large-margin">

    <div class="grid-container">
        <div class="title-block medium-text-center mb-30">
            <h2 class="h1 m-0">{{section.settings.section_title}}</h2>
            <div class="lead color-secondary-text mt-5 mb-0">{{section.settings.section_subheading}}</div>
            {% comment %}
            <a href="{{ settings.social_instagram_link }}" class="arrow-link color-secondary-text mt-20">Visit our Instagram page {% include 'icon-chevron-right' %}</a>
            {% endcomment %}
        </div>
    </div>

    <div
        class="yotpo yotpo-pictures-widget"
        data-gallery-id="5d30323401f0952d49ff7e78">
    </div>


</div>

{% schema %}
    {
        "name": "Instagram",
        "settings": [
            {
                "type": "header",
                "content": "Section Title"
            },
            {
                "type": "text",
                "id": "section_title",
                "label": "Title"
            },
            {
                "type": "richtext",
                "id": "section_subheading",
                "label": "Subheading"
            }
        ],
        "presets": [
            {
                "name": "Instagram",
                "category": "Sections"
            }
        ]
    }
{% endschema %}

