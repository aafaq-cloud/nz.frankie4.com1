<div class="section">
    <div class="cell-image cell medium-auto" 
        style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}'); 
            height: 600px; 
            width: 100%; 
            background-size: cover;
            background-position: center;">
            <div style="color: white; text-align: center; padding-top: 200px;">
                <h1>{{section.settings.section_main_title}}</h1>
                <h4>{{section.settings.section_subtitle}}</h4>
            </div>
    </div>
</div>

<div class="section">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell small-12 medium-6 large-6" style="padding-right: 30px; height: 45vh;">
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_2 | img_url: '1400x'}}'); 
                            height: 40vh; 
                            max-height: 950px; 
                            width: 100%; 
                            background-size: cover;
                            background-position: center;">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6" style="padding-left: 30px; height: 45vh;">
                <div style="width: 3px; height: 100px; background-color: #808080; margin: 30px auto 30px auto;"></div>
                <div style="text-align: center;">
                    <h1>{{section.settings.section_title}}</h1>
                    <p>{{section.settings.section_paragraph}}</p>
                    <span><b><a href="{{section.settings.link1}}">{{section.settings.link1_name}}</a></b></span>
                </div>
                <div style="width: 3px; height: 100px; background-color: #808080; margin: 30px auto 30px auto;"></div>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell-image cell medium-auto" 
                style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}'); 
                    height: 700px; 
                    width: 100%; 
                    background-size: cover;
                    background-position: center;">
            </div>
            <div style="text-align: right; width: 100%; margin: 0 0 0 1px;">
                <p>{{section.settings.section_patent}}</p>
            </div>
            <div style="text-align: center; width: 1100px; margin: 40px 12vw 20px 12vw;">
                <h1 style="margin-bottom: 30px">{{section.settings.section_title_2}}</h1>
                <p>{{section.settings.section_paragraph_2}}</p>
            </div>
            <div style="width: 3px; height: 140px; background-color: #808080; margin: 40px auto 10px auto;"></div>
        </div>
    </div>
</div>





{% schema %}
     {
         "name": "Sole Hero Footbed Content",
         "settings": [
            {
                "type": "text",
                "id": "section_main_title",
                "label": "Page Title"
            },{
                "type": "text",
                "id": "section_subtitle",
                "label": "Subtitle"
            },{
                "type": "image_picker",
                "id": "image_1",
                "label": "Image1"
            },
            {
                "type": "text",
                "id": "section_title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "section_paragraph",
                "label": "Paragraph"
            },
            {
                "type": "image_picker",
                "id": "image_2",
                "label": "Image2"
            },
            {
                "type": "textarea",
                "id": "section_patent",
                "label": "Patent"
            },
            {
                "type": "image_picker",
                "id": "image_3",
                "label": "Image3"
            },
            {
                "type": "text",
                "id": "section_title_2",
                "label": "Title2"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_2",
                "label": "Paragraph2"
            }
         ]
     }
 {% endschema %}
