<div class="section">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="deco-line"></div>
            <div class="text-center" style="width: 1100px; margin: 40px 10% 20px 10%;">
                <h1>{{section.settings.section_title}}</h1>
                <p>{{section.settings.section_paragraph}}</p>
            </div>
            <div class="deco-line"></div>
        </div>
    </div>
</div>

<div class="section" style="margin-bottom: 60px">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell small-12 medium-6 large-6" style="padding-right: 60px; height: 90vh; max-height: 1150px;">
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}'); 
                            height: 90vh; 
                            max-height: 1150px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6" style="height: 90vh; max-height: 1150px;">
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_2 | img_url: '1400x'}}'); 
                            height: 40vh; 
                            max-height: 450px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
                <div class="deco-line" style="margin-top: -70px;"></div>
                <div class="text-center">
                    <img src="{{section.settings.quote_image_1 | img_url: '60x'}}"/>
                    <p class="quote-text">{{section.settings.section_quote}}</p>
                    <p>{{section.settings.section_name}}</p>
                    <img src="{{section.settings.quote_image_2 | img_url: '60x'}}"/>
                </div>
                <div class="deco-line"></div>
            </div>
        </div>
    </div>
</div>


<style>

    .wide-screen-only {
        display: block;
    }
    .mobile-screen-only {
        display: none;
    }
    .column-left {
        padding-right: 30px;
    }
    .column-right {
        padding-left: 30px;
    }
    .landing-image {
        height: 600px; 
        width: 100%; 
        background-size: cover;
        background-position: center;
    }
    .landing-text {
        color: white; 
        padding-top: 200px;
    }
    .deco-line {
        width: 3px;
        height: 140px;
        background-color: #808080;
        margin: 40px auto 20px auto;
    }
    .deco-line-horizontal {
        width: 100%;
        height: 2px;
        background-color: #dddddd;
        margin: 40px auto 10px auto;
    }
    .image-full-width {
        height: 700px; 
        width: 100%; 
        background-size: cover;
        background-position: center;
    }
    .image-half-width {
        height: 700px;  
        width: 100%; 
        background-size: cover;
        background-position: center;
    }
    .bottom-images {
        height: 100%; 
        width: 100%; 
        background-size: cover;
        background-position: center;
    }
    
    .bottom-image-blocks {
        height: 23vw;
        max-height: 280px;
        width: 23vw;
        max-width: 280px;
        border-bottom: 1px solid white;
    }
    .bottom-image-blocks:hover {
        border-bottom: 1px solid black;
    }
    @media screen and (min-width: 641px) and (max-width: 800px) {
        .landing-image {
            height: 300px;
        }
        .landing-text {
            color: white; 
            padding-top: 100px;
        }
        .deco-line {
            width: 3px;
            height: 100px;
            background-color: #808080;
            margin: 20px auto 10px auto;
        }
        .image-full-width {
            height: 400px; 
            width: 100%; 
            background-size: cover;
            background-position: center;
        }
        .image-half-width {
            height: 600px;  
        }
    }
    @media screen and (max-width: 640px) {
        .wide-screen-only {
            display: none;
        }
        .mobile-screen-only {
            display: block;
        }
        .column-left {
            padding-right: 0;
        }
        .column-right {
            padding-left: 0;
        }
        .landing-image {
            height: 200px;
        }
        .landing-text {
            color: white; 
            padding-top: 50px;
        }
        .deco-line {
            width: 3px;
            height: 50px;
            background-color: #808080;
            margin: 20px auto 10px auto;
        }
        .image-full-width {
            height: 200px; 
            width: 100%; 
            background-size: cover;
            background-position: center;
        }
        .image-half-width {
            height: 300px;  
        }
        .bottom-image-blocks {
            height: 45vw;
            max-height: 250px;
            width: 45vw; 
            max-width: 250px;
            margin-bottom: 10px;
        }
    }


    b {
        font-weight: bolder;
    }
    h1 {
        font-size: 80px;
        font-family: dm serif display;
        line-height: 80px;
    }
    h2 {
        font-size: 36px;
        font-family: dm serif display;
        line-height: 36px;
    }
    h3 {
        font-size: 26px;
        font-family: montserrat-semibold;
        line-height: 36px;
        letter-spacing: 3px;
    }
    h4 {
        font-size: 22px;
        font-family: montserrat-light;
        line-height: 32px;
        letter-spacing: 3px;
    }
    h5 {
        font-size: 20px;
        font-family: montserrat-bold;
        line-height: 30px;
        letter-spacing: 2px;
    }
    p {
        font-size: 20px;
        font-family: montserrat;
        line-height: 30px;
    }
    .small-text {
        font-size: 15px;
        font-family: montserrat-light;
        line-height: 25px;
    }
    .large-text {
        font-size: 26px;
        font-family: montserrat;
        line-height: 36px;
    }
    .quote-text {
        font-size: 30px;
        font-family: dm serif display;
        line-height: 32px;
    }

</style>


