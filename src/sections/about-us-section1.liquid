<div class="section mobile-section1">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="deco-line"></div>
            <div class="text-center text-block1">
                <h1>{{section.settings.section_title}}</h1>
                <p>{{section.settings.section_paragraph}}</p>
            </div>
            <div class="deco-line wide-screen-only" style="margin-top:0; margin-bottom: 40px"></div>
            <div class="deco-line mobile-screen-only" style="margin-top:0;"></div>
        </div>
    </div>
</div>

<div class="section wide-screen-margin mobile-section2">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell small-12 medium-6 large-6 wide-screen-only" style="padding-right: 60px; height: 1050px;">
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_1 | img_url: '1400x'}}'); 
                            height: 1050px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6" style="height: 1050px;">
                {% comment %} <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_2 | img_url: '1400x'}}'); 
                            height: 40vh; 
                            max-height: 450px; 
                            width: 100%; 
                            background-size: cover;">
                </div> {% endcomment %}
                <div data-autoload-class="ComponentVideo">
                    <video autoplay="" loop="" muted="" plays-inline="" playsinline width="100%" height="340px" class="mobile-video" controls="controls">
                        <source src="{{ section.settings.video }}" type="video/mp4">
                    </video>
                </div>
                <div class="wide-screen-only" style="height: 80px"></div>
                <div class="text-center text-block2">
                    <img class="mobile-width" src="{{section.settings.quote_image_1 | img_url: '60x'}}"/>
                    <p class="quote-text">{{section.settings.section_quote}}</p>
                    <p>{{section.settings.section_name}}</p>
                    <img class="mobile-width" src="{{section.settings.quote_image_2 | img_url: '60x'}}"/>
                </div> 
                <div class="deco-line"></div>
            </div>
        </div>
    </div>
</div>


<style>
    @media screen and (max-width: 640px) {
        .mobile-style1 {
            margin-bottom: 10px;
        }
        .mobile-style2 {
            margin-top: 40px!important;
        }
        .mobile-style3 {
            margin-top: 30px!important;
            margin-bottom: 30px!important;
        }
        .mobile-style4 {
            margin-top: 40px!important;
            margin-bottom: 30px!important;
        }
        .mobile-style5 {
            height: 200px!important;
        }
        .mobile-style6 {
            height: 280px!important;
        }
        .mobile-style7 {
            margin-bottom: 20px!important;
        }
        .mobile-style8 {
            margin-bottom: 30px!important;
        }


    }
</style>


{% schema %}
     {
         "name": "About Us Section 1",
         "settings": [
            {
                "type": "text",
                "id": "section_title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "section_paragraph",
                "label": "Paragraph"
            },
            {
                "type": "image_picker",
                "id": "image_1",
                "label": "Image1"
            },
            {
                "id": "video",
                "type": "text",
                "label": "Video",
                "info": "Enter the video source URL. The video must be .mp4 format and hosted publicly."
            },
            {
                "type": "image_picker",
                "id": "image_2",
                "label": "Image2"
            },
            {
                "type": "image_picker",
                "id": "quote_image_1",
                "label": "Quote Image 1"
            },
            {
                "type": "image_picker",
                "id": "quote_image_2",
                "label": "Quote Image 2"
            },
            {
                "type": "textarea",
                "id": "section_quote",
                "label": "Quote"
            },
            {
                "type": "text",
                "id": "section_name",
                "label": "Name"
            }
         ]
     }
 {% endschema %}
