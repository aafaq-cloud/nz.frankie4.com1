<div data-autoload-class="WeStandForSection" class="section section-we-stand-for no-margin">

  <div class="grid-container">
    <div class="grid-x align-center text-center">
      <div class="cell">
        <h2 class="h1 mb-20">We stand for</h2>
      </div>

  </div>

  <div class="grid-container">

    <div class="grid-x grid-padding-x tab-titles">
      {% assign tabIndex = 1 %}
      {% for block in section.blocks %}

        {% if block.type == 'tab_title' %}
          <div class="cell large-3">
            <div class="tab-title{% if tabIndex == 1 %} active{% endif %}" data-tab-index="{{ tabIndex }}">
              <div class="tab-title-container">
                <img class="tab-title-image" src="{{ block.settings.image | img_url: '500x500', crop: 'center' }}"/>
                <div class="tab-title-content-container">
                  <div class="tab-title-content">
                    <h3>{{ block.settings.title }}</h3>
                  </div>
                </div>
              </div>

            </div>
          </div>
          {% assign tabIndex = tabIndex | plus: 1 %}
        {% endif %}

      {% endfor %}

    </div>

  </div>


  {% comment %}
    Tab Content
  {% endcomment %}
  <div class="grid-container">

    <div class="grid-x">
      <div class="cell large-12">

        <div class="tab-content">
          {% assign tabContentIndex = 1 %}

          {% assign slideTitles = '' %}

          {% for block in section.blocks %}



            {% if block.type == 'slider_start' %}

            {% assign slideTitles = '' %}
             <div class="tab-content-item{% if tabContentIndex == 1 %} active{% endif %}" data-tab-content-index="{{ tabContentIndex }}">
              <div class="glide slider">
                <div class="glide__track" data-glide-el="track">
                  <ul class="glide__slides">
              {% assign tabContentIndex = tabContentIndex | plus: 1 %}

            {% endif %}

            {% if block.type == 'slider_end' %}

                  </ul>
                </div>
              <div class="glide__bullets" data-glide-el="controls[nav]">
                {% assign slides = slideTitles | split: ',' %}
                {% for bullet in slides %}
                  <button class="glide__bullet" data-glide-dir="={{ forloop.index0 }}">
                    <span></span>
                    {{bullet}}
                  </button>
                {% endfor %}
              </div>
              </div>

              </div>

            {% endif %}

            {% if block.type == 'tab_content' %}

              <li class="glide__slide">

                  <div class="grid-x">
                    <div class="cell large-6">
                      <img src="{{ block.settings.image | img_url: '500x500', crop: 'center' }}"/>
                    </div>
                    <div class="cell large-6">
                      <h2>{{ block.settings.title }}</h2>
                      <div>{{ block.settings.content }}</div>
                    </div>
                  </div>

              </li>

              {% unless slideTitles == '' %}
                {% assign slideTitles = slideTitles | append: ',' %}
              {% endunless %}
              {% assign slideTitles = slideTitles | append: block.settings.title %}


            {% endif %}

          {% endfor %}

      </div>
    </div>

  </div>


</div>


{% schema %}
    {
        "name": "We Stand For Slider",
        "settings": [
           {
            "type": "header",
            "content": "Section Title"
            },
            {
                "type": "text",
                "id": "section_title",
                "label": "Title"
            },
            {
                "id": "section_content",
                "type": "textarea",
                "label": "Content"
            }
        ],
        "blocks": [
             {
                "type": "tab_title",
                "name": "Tab Title",
                "settings": [
                    {
                        "id": "image",
                        "type": "image_picker",
                        "label": "Image"
                    },
                    {
                        "id": "title",
                        "type": "text",
                        "label": "Title"
                    }
                ]
            },
            {
                "type": "slider_start",
                "name": "Slider Start",
                "settings": []
            },
            {
              "type": "slider_end",
              "name": "Slider End",
              "settings": []
            },
            {
                "type": "tab_content",
                "name": "Tab Content",
                "settings": [
                    {
                        "id": "image",
                        "type": "image_picker",
                        "label": "Image"
                    },
                    {
                        "id": "video_url",
                        "type": "video_url",
                        "accept": ["youtube", "vimeo"],
                        "label": "Video"
                    },
                    {
                        "id": "title",
                        "type": "text",
                        "label": "Title"
                    },
                    {
                        "id": "content",
                        "type": "richtext",
                        "label": "Content"
                    },
                    {
                        "id": "button_text",
                        "type": "text",
                        "label": "Button Text"
                    },
                    {
                        "id": "link",
                        "type": "url",
                        "label": "Button Link"
                    }
                ]
            }
        ]
    }
{% endschema %}