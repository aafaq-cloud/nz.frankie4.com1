    "name": "Product",
    "settings": [
      {
        "id": "showquantity",
        "type": "checkbox",
        "label": "Display quantity selector",
        "info": "If unchecked, Add To Cart is always 1 item",
        "default": true
      },
      {
        "type": "richtext",
        "id": "product_information_label",
        "label": "Product Label",
        "info": "Enter an information label to appear on all product pages"
      },
      {
        "type": "header",
        "content": "Product Information"
      },
      {
        "type": "text",
        "id": "product_accordion_title_1",
        "label": "Accordion Title 1"
      },
      {
        "type": "richtext",
        "id": "product_accordion_content_1",
        "label": "Accordion Content 1"
      },
      {
        "type": "text",
        "id": "product_accordion_title_2",
        "label": "Accordion Title 2"
      },
      {
        "type": "richtext",
        "id": "product_accordion_content_2",
        "label": "Accordion Content 2"
      },
      {
        "type": "text",
        "id": "product_accordion_title_3",
        "label": "Accordion Title 3"
      },
      {
        "type": "richtext",
        "id": "product_accordion_content_3",
        "label": "Accordion Content 3"
      },
      {
        "type": "text",
        "id": "product_accordion_title_4",
        "label": "Accordion Title 4"
      },
      {
        "type": "richtext",
        "id": "product_accordion_content_4",
        "label": "Accordion Content 4"
      },
      {
        "type": "text",
        "id": "product_accordion_title_5",
        "label": "Accordion Title 5"
      },
      {
        "type": "richtext",
        "id": "product_accordion_content_5",
        "label": "Accordion Content 5"
      }
    ]
  }
{% endschema %}
