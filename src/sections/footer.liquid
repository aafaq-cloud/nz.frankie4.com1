<footer>

  <div class="grid-container">

    {%- assign footer_mobile_linklist = section.settings.footer_mobile_linklist -%}
    {% if linklists[footer_mobile_linklist].links.size > 0 %}
      <ul class="menu hide-for-medium grid-x grid-margin-x">
        {% for link in linklists[footer_mobile_linklist].links %}
        <li class="cell mb-20">
          <a {% if link.url != '#' %}href="{{ link.url }}"{% endif %}><h5>{{ link.title }}</h5></a>

          {% if link.links != blank %}
          <ul class="sub-menu">
            {% for child_link in link.links %}
            <li>
              <a href="{{ child_link.url }}">{{ child_link.title | escape }}</a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    {% endif %}

    {%- assign footer_linklist = section.settings.footer_linklist -%}
    {% if linklists[footer_linklist].links.size > 0 %}
      <ul class="menu show-for-medium grid-x grid-margin-x grid-margin-y">
          {% for link in linklists[footer_linklist].links %}
            <li class="cell small-6 medium-3 mb-20">
              <a {% if link.url != '#' %}href="{{ link.url }}"{% endif %}><h5>{{ link.title }}</h5></a>

                {% if link.links != blank %}
                  <ul class="sub-menu color-secondary-text">
                      {% for child_link in link.links %}
                        <li>
                          <a href="{{ child_link.url }}" class="hover-link">{{ child_link.title | escape }}</a>
                        </li>
                      {% endfor %}
                  </ul>
                {% endif %}
            </li>
          {% endfor %}
      </ul>
    {% endif %}

    <div class="grid-x grid-margin-x grid-margin-y align-justify align-middle mt-20">

      <div class="cell medium-shrink medium-order-1">
        <div class="social-icons-container">
          <h5 class="social-icons-title show-for-medium">{{ shop.name }} <strong>{{ 'general.social.headline' | t }}</strong></h5>
          {% include 'social-icons' %}
        </div>
      </div>

      <div class="cell medium-shrink">
        <ul class="footer-legals">
          <li>&copy; {{ shop.name | link_to: '/' }} {{ 'now' | date: "%Y" }}</li>
          {% for link in linklists[section.settings.footer_legal_linklist].links %}
            <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
          <li><a href="https://lambagency.com.au/" target="_blank" rel="nofollow noopener">Website by Lamb Agency</a></li>
        </ul>
      </div>

    </div>

</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_linklist",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "footer_mobile_linklist",
      "label": "Footer mobile menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "footer_legal_linklist",
      "label": "Footer Legal menu"
    }
  ]
}
{% endschema %}
