<footer>

  <div class="grid-container">
    <div class="grid-x">
      <div class="cell large-6 medium-8">
        {%- assign footer_mobile_linklist = section.settings.footer_mobile_linklist -%}
        {% if linklists[footer_mobile_linklist].links.size > 0 %}
        <ul class="menu hide-for-medium grid-x grid-margin-x grid-margin-y">
          {% for link in linklists[footer_mobile_linklist].links %}
          <li class="cell small-12 text-center">
            <a {% if link.url != '#' %}href="{{ link.url }}"{% endif %}>{{ link.title }}</a>

            {% if link.links != blank %}
            <ul class="sub-menu">
              {% for child_link in link.links %}
              <li>
                <a href="{{ child_link.url }}">{{ child_link.title | escape }}</a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
        {% endif %}

        {%- assign footer_linklist = section.settings.footer_linklist -%}
        {% if linklists[footer_linklist].links.size > 0 %}
        <ul class="menu show-for-medium grid-x grid-margin-x grid-margin-y">
          {% for link in linklists[footer_linklist].links %}
          <li class="cell small-6 medium-3">
            <a {% if link.url != '#' %}href="{{ link.url }}"{% endif %} class="h4">{{ link.title }}</a>

            {% if link.links != blank %}
            <ul class="sub-menu color-secondary-text">
              {% for child_link in link.links %}
              <li>
                <a href="{{ child_link.url }}">{% include 'icon-chevron-down' %} {{ child_link.title | escape }}</a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      <div class="cell large-6 medium-4 grid-x align-right align-bottom">
        <div class="socials grid-x align-right grid-margin-x cell large-9">

          <div class="social-icons-container cell">
            <h4>{{ 'general.social.headline' | t }}</h4>
            {% include 'social-icons' %}
          </div>

          {% if section.settings.show_payment_icons %}
          {% unless shop.enabled_payment_types == empty %}
          {%- assign payment_icons_available = 'afterpay,master,paypal,visa,american_express' | split: ',' -%}

          <span class="show-for-sr">{{ 'layout.footer.payment_methods' | t }}</span>
          <ul class="payment-icons cell grid-x align-middle small-12 medium-6 large-3">
            {% for type in payment_icons_available %}
            {% if shop.enabled_payment_types contains type %}
            <li class="icon-coloured">
              {%- assign icon_name = type | prepend: 'icon-' -%}
              {% include icon_name %}
              <span class="show-for-sr">{{ type | capitalize | replace: '_', ' ' }}</span>
            </li>
            {% endif %}
            {% endfor %}
          </ul>
          {% endunless %}
          {% endif %}
          <ul class="footer-legals cell color-secondary-text semibold text-small">
            <li>&copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: '/' }}</li>
            {% for link in linklists[section.settings.footer_legal_linklist].links %}
              <li><a href="{{link.url}}">{{link.title}}</a></li>
            {% endfor %}
            <li><a href="https://lambagency.com.au/" target="_blank" rel="nofollow noopener">Website by Lamb Agency</a></li>
          </ul>
          </div>
        </div>

    </div>
  </div>


</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
  {
    "type": "link_list",
    "id": "footer_linklist",
    "label": "Footer menu",
    "default": "footer"
  },
  {
    "type": "link_list",
    "id": "footer_mobile_linklist",
    "label": "Footer mobile menu",
    "default": "footer"
  },
  {
    "type": "link_list",
    "id": "footer_legal_linklist",
    "label": "Footer Legal menu"
  },
  {
    "type": "checkbox",
    "id": "show_payment_icons",
    "label": "Show payment icons",
    "default": false
  }
  ]
}
{% endschema %}
