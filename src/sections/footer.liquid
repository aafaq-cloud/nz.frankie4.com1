<footer>

  <div class="grid-container">

    <div class="grid-x grid-margin-x mb-20 footer-links">

      {% if section.blocks != blank %}
        {% for block in section.blocks %}
          <div class="cell large-3 mb-20">

            <a href="{{ block.settings.footer_link_link }}">
              <h5>{{ block.settings.footer_link_title }} {% include "icon-arrow-right" %}</h5>
            </a>
            <div class="color-secondary-text show-for-medium">{{ block.settings.footer_link_text }}</div>

          </div>
        {% endfor %}
      {% endif %}

    </div>

    <div class="grid-x grid-margin-x">
      <div class="cell large-12">
          {%- assign footer_mobile_linklist = section.settings.footer_mobile_linklist -%}
          {% if linklists[footer_mobile_linklist].links.size > 0 %}
            <ul class="menu hide-for-medium grid-x grid-margin-x">
                {% for link in linklists[footer_mobile_linklist].links %}
                  <li class="cell mb-20">

                    <div aria-controls="accordion-item-{{ forloop.index }}" {% if link.links != blank %} data-autoload-class="ComponentAccordionItem" {% endif %} class="accordion-toggle">
                      <h6 class="accordion-toggle-title"> <a {% if link.url != '#' %}href="{{ link.url }}"{% endif %}>{{ link.title }}</a></h6>
                      {% if link.links != blank %}
                      <span class="open-icon">{% include 'icon-chevron' %}</span>
                      <span class="close-icon">{% include 'icon-chevron' %}</span>
                      {% endif %}
                    </div>

                      {% if link.links != blank %}
                        <ul class="sub-menu accordion accordion-body" id="accordion-item-{{ forloop.index }}" aria-expanded="false">
                            {% for child_link in link.links %}
                              <li>
                                <a href="{{ child_link.url }}">{{ child_link.title | escape }}</a>
                              </li>
                            {% endfor %}
                        </ul>
                      {% endif %}
                  </li>
                {% endfor %}
            </ul>
          {% endif %}

          {%- assign footer_linklist = section.settings.footer_linklist -%}
          {% if linklists[footer_linklist].links.size > 0 %}
            <ul class="menu show-for-medium">
                {% for link in linklists[footer_linklist].links %}
                  <li class="mb-40">
                    <a {% if link.url != '#' %}href="{{ link.url }}"{% endif %}><h6>{{ link.title }}</h6></a>

                      {% if link.links != blank %}
                        <ul class="sub-menu color-secondary-text">
                            {% for child_link in link.links %}
                              <li>
                                <a href="{{ child_link.url }}" class="hover-link">{{ child_link.title | escape }}</a>
                              </li>
                            {% endfor %}
                        </ul>
                      {% endif %}
                  </li>
                {% endfor %}
            </ul>
          {% endif %}
      </div>
    </div>

    <div class="grid-y grid-margin-x grid-margin-y align-center align-middle mt-20">

      <div class="cell shrink">
        <div class="social-icons-container">
          {% include 'social-icons' %}
        </div>
      </div>
      <div class="cell shrink">
        <ul class="footer-legals">
          <li>&copy; {{ shop.name | link_to: '/' }} {{ 'now' | date: "%Y" }}</li>
          {% for link in linklists[section.settings.footer_legal_linklist].links %}
            <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
        </ul>

      </div>



    </div>

</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_linklist",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "footer_mobile_linklist",
      "label": "Footer mobile menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "footer_legal_linklist",
      "label": "Footer Legal menu"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email"
    }
  ],
  "blocks": [
    {
      "type": "footer_links",
      "name": "Footer Links",
      "settings": [
        {
          "type": "text",
          "id": "footer_link_title",
          "label":"Footer Link Title"
        },
        {
          "type": "textarea",
          "id": "footer_link_text",
          "label":"Footer Link Text"
        },
        {
          "type": "url",
          "id": "footer_link_link",
          "label":"Footer Link"
        }
      ]
    }
  ]
}
{% endschema %}
