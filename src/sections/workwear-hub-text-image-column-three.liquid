<div class="section m-mt-0 section-about-us-page-group">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell small-12 medium-6 large-6 column-left wide-screen-only">
                <div class="cell-image cell medium-auto image-half-width" 
                    style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}');
                            background-position: bottom">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-right">
                <div class="section-line mti-30 mbi-20 m-mb-20 m-mt-0"></div>
                <div class="text-center">
                    <h1>{{ section.settings.section_title_5 }}</h1>
                    <p>{{ section.settings.section_content_5 }}</p>
                    <span><h5><a href="{{section.settings.link3}}">{{section.settings.link3_name}}</a></h5></span>
                </div>
                <div class="section-line mti-40 mbi-0 m-mb-10 m-mt-30 wide-screen-only"></div>
                <div class="mobile-screen-only" style="height: 20px;"></div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-left mobile-screen-only">
                <div class="cell-image cell medium-auto image-half-width" 
                    style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}');
                            background-position: bottom">
                </div>
            </div>
        </div>
        <div class="section-line mti-40 mbi-0 m-mb-0 m-mt-30 mobile-screen-only" style="padding-bottom: 0"></div>
    </div>
</div>

{% schema %}
     {
         "name": "Workwear Hub Section 5",
         "settings": [
            {
                "type": "text",
                "id": "section_title_5",
                "label": "Title 5"
            },
            {
                "type": "textarea",
                "id": "section_content_5",
                "label": "Content 5"
            },
            {
                "type": "text",
                "id": "link3_name",
                "label": "Link Section 5 Text"
            },
            {
                "type": "text",
                "id": "link3",
                "label": "Link Section 5"
            },
            {
                "type": "image_picker",
                "id": "image_5",
                "label": "Image Section 5"
            }
        ]
     }
 {% endschema %}
