<div class="section">
    <div class="grid-container">
        <div class="grid-x" style="align-items: flex-end;">
            <div class="cell small-12 medium-6 large-6 column-left">
                <div class="cell-image cell medium-auto wide-screen-only" 
                    style="background-color: white; 
                            height: 100px; 
                            width: 100%;">
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}'); 
                            height: 400px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
                <div class="cell-image cell medium-auto wide-screen-only" 
                    style="background-color: white; 
                            height: 60px; 
                            width: 100%;">
                </div>
                <div class="cell-image cell medium-auto wide-screen-only" 
                    style="background-image: url('{{section.settings.image_4 | img_url: '1400x'}}'); 
                            height: 600px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6 column-right">
                <div class="deco-line"></div>
                <div style="text-align: center;">
                    <h1>{{section.settings.section_title_2}}</h1>
                    <p>{{section.settings.section_paragraph_2}}</p>
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-color: white; 
                            height: 30px; 
                            width: 100%;">
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}'); 
                            height: 50vh; 
                            max-height: 730px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
            </div>
        </div>
    </div>
</div>




{% schema %}
     {
         "name": "About Us Section 2",
         "settings": [
            {
                "type": "image_picker",
                "id": "image_3",
                "label": "Image3"
            },
            {
                "type": "image_picker",
                "id": "image_4",
                "label": "Image4"
            },
            {
                "type": "image_picker",
                "id": "image_5",
                "label": "Image5"
            },
            {
                "type": "text",
                "id": "section_title_2",
                "label": "Title2"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_2",
                "label": "Paragraph2"
            },
            {
                "type": "text",
                "id": "section_title_3",
                "label": "Title3"
            },
            {
                "type": "textarea",
                "id": "section_paragraph_3",
                "label": "Paragraph3"
            }
         ]
     }
 {% endschema %}
