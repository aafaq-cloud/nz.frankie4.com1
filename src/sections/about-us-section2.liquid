{% comment %} for the planet section {% endcomment %}
<div class="section">
    <div class="grid-container">
        <div class="grid-x" style="align-items: flex-end;">
            <div class="cell small-12 medium-6 large-6" style="padding-right: 30px;">
                <div class="cell-image cell medium-auto" 
                    style="background-color: white; 
                            height: 200px; 
                            width: 100%;">
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_3 | img_url: '1400x'}}'); 
                            height: 25vh; 
                            max-height: 480px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-color: white; 
                            height: 60px; 
                            width: 100%;">
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_4 | img_url: '1400x'}}'); 
                            height: 55vh; 
                            max-height: 780px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
            </div>
            <div class="cell small-12 medium-6 large-6" style="padding-left: 30px;">
                <div style="width: 3px; height: 140px; background-color: #808080; margin: 50px auto 80px auto;"></div>
                <div style="text-align: center;">
                    <h1>{{section.settings.section_title_2}}</h1>
                    <p>{{section.settings.section_paragraph_2}}</p>
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-color: white; 
                            height: 30px; 
                            width: 100%;">
                </div>
                <div class="cell-image cell medium-auto" 
                    style="background-image: url('{{section.settings.image_5 | img_url: '1400x'}}'); 
                            height: 50vh; 
                            max-height: 730px; 
                            width: 100%; 
                            background-size: cover;">
                </div>
            </div>
        </div>
    </div>
</div>

