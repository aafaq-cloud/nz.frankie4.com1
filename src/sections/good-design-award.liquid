<div class="section section-text-image no-margin wide-screen-only">

    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell medium-6 large-4">
                <div class="cell-text-container text-center" style="padding: 20px; margin: 8%">
                    <div class="cell-image cell medium-auto">
                        <img src="{{section.settings.image_2 | img_url: '400x'}}" style="width: 210px; margin: auto">
                    </div>
                    <p style="line-height: normal;">{{section.settings.content}}</p>
                    <div class="cell shrink">
                        <a class="button button-primary" target="_blank" href="{{ section.settings.good_design_award }}">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="cell-image cell medium-auto">
                <div data-autoload-class="ComponentVideo" style="height:450px">
                    <video autoplay="" loop="" muted="" plays-inline="" playsinline width="100%" height="450" controls="controls">
                        <source src="{{ section.settings.video }}" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section section-text-image no-margin mobile-screen-only">

    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="cell medium-6 large-4">
                <div class="cell-text-container text-center" style="padding: 20px; margin: 8%">
                    <div class="cell-image cell medium-auto">
                        <img src="{{section.settings.image_2 | img_url: '400x'}}" style="width: 210px; margin: auto">
                    </div>
                    <p style="line-height: normal;">{{section.settings.content}}</p>
                    <div class="cell shrink">
                        <a class="button button-primary" target="_blank" href="{{ section.settings.good_design_award }}">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="cell-image cell medium-auto">
                <div data-autoload-class="ComponentVideo" style="height:200px; margin-bottom: 25px">
                    <video autoplay="" loop="" muted="" plays-inline="" playsinline width="100%" height="200" controls="controls">
                        <source src="{{ section.settings.video-m }}" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.wide-screen-only {
    display: block;
}
.mobile-screen-only {
    display: none;
}

@media screen and (max-width: 640px) {
    .wide-screen-only {
        display: none;
    }
    .mobile-screen-only {
        display: block;
    }
}
</style>



{% schema %}
{
  "name": "Good Design Award",
  "settings": [
    {
        "type": "image_picker",
        "id": "image_2",
        "label": "Good Design Award Icon"
    },
    {
        "type": "textarea",
        "id": "content",
        "label": "Content"
    },
    {
        "type": "url",
        "id": "good_design_award",
        "label": "Good Design Award URL link"
    },
    {
        "id": "video",
        "type": "text",
        "label": "Video",
        "info": "Enter the video source URL. The video must be .mp4 format and hosted publicly."
    },
    {
        "id": "video-m",
        "type": "text",
        "label": "Video Mobile",
        "info": "Enter the video source URL. The video must be .mp4 format and hosted publicly."
    }
  ]
}
{% endschema %}
