<div class="section m-mb-0 section-about-us-page-group">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <iframe class="vimeo_video" src="https://player.vimeo.com/video/{{section.settings.video_id}}" width="100%" height="700px" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
        <div class="grid-container text-center mti-30 mbi-0">
            <span><h5><a href="{{section.settings.link1}}">{{section.settings.link1_name}}</a></h5></span>
        </div>
    </div>
</div>

<style>
    @media screen and (max-width: 600px) {
        .vimeo_video {
            height: 200px;
        }
    }
    @media screen and (min-width: 601px) and (max-width: 900px) {
        .vimeo_video {
            height: 400px;
        }
    }
    @media screen and (min-width: 901px) and (max-width:1100px) {
        .vimeo_video {
            height:550px;
        }
    }
</style>

{% schema %}
     {
         "name": "Video Section",
         "settings": [
            {
                "type": "text",
                "id": "video_id",
                "label": "Vimeo video ID"
            },
            {
                "type": "text",
                "id": "link1_name",
                "label": "Link Text"
            },
            {
                "type": "text",
                "id": "link1",
                "label": "Link URL"
            }
        ]
     }
 {% endschema %}
