<div class="section m-mt-0 m-mb-0 section-about-us-page-group" style="background-color: #eeeeee; padding-top: 20px; padding-bottom: 30px">
    <div class="grid-container">
        <div class="grid-x align-middle">
            <div class="text-section text-center mbi-10 m-mt-20 m-mb-20">
                <span class="h1-v2">{{section.settings.section_title}}</span>
                <p>{{section.settings.section_paragraph}}</p>
            </div>
            <iframe class="vimeo_video" src="https://player.vimeo.com/video/{{section.settings.video_id}}" width="100%" height="700px" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
        <div class="grid-container text-center mti-30">
            <span><h5><a href="{{section.settings.link1}}">{{section.settings.link1_name}}</a></h5></span>
        </div>
    </div>
</div>

<style>
    @media screen and (max-width: 600px) {
        .vimeo_video {
            height: 200px;
        }
    }
    @media screen and (min-width: 601px) and (max-width: 900px) {
        .vimeo_video {
            height: 400px;
        }
    }
    @media screen and (min-width: 901px) and (max-width:1100px) {
        .vimeo_video {
            height:550px;
        }
    }
</style>

{% schema %}
     {
         "name": "Video Section",
         "settings": [
            {
                "type": "text",
                "id": "section_title",
                "label": "Title 1"
            },
            {
                "type": "textarea",
                "id": "section_paragraph",
                "label": "Paragraph 1"
            },
            {
                "type": "text",
                "id": "video_id",
                "label": "Vimeo video ID"
            },
            {
                "type": "text",
                "id": "link1_name",
                "label": "Link Text"
            },
            {
                "type": "url",
                "id": "link1",
                "label": "Link URL"
            }
        ]
     }
 {% endschema %}
