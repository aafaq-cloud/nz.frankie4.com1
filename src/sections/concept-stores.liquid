<div class="section section-concept-stores large-margin">

    <div class="grid-container">
        <div class="grid-x grid-margin-x align-middle title-block mbi-5">
            <div class="cell">
                <h2 class="h1 m-0">{{section.settings.section_title}}</h2>
            </div>
        </div>
        <div class="grid-x grid-margin-x align-middle title-block">
            <div class="cell">
                {% if section.settings.section_subheading != blank %}<p class="lead">{{section.settings.section_subheading}}</p>{% endif %}
                {{section.settings.section_paragraph}}
            </div>
        </div>
    </div>


    <div class="grid-container">

    {% if section.blocks !=  blank %}

        <div class="grid-x grid-margin-x grid-margin-y">

            {% for block in section.blocks %}

                <div class="cell">
                    <div class="store grid-x" style="background-image:url({{ block.settings.store_image | img_url: "x1200" }})">


                         <div class="mobile-image" style="background-image:url({{ block.settings.store_image | img_url: "x1200" }})"></div>


                        <div class="store-box">
                            <h2>{{ block.settings.title }}</h2>
                            <div>{{ block.settings.address }}</div>
                            <div class="mb-30"><strong>{{ block.settings.phone }}</strong></div>


                            <div class="opening-hours">
                                {% if block.settings.show_open_hour %}<div class="text-small opening-hours-title">Opening Hours</div>{% endif %}
                                 <div class="opening-hours-list">
                                 {{ block.settings.opening_hours }}
                                 </div>
                            </div>

                        </div>

                    </div>
                </div>

            {% endfor %}

        </div>
        {% endif %}
    </div>
</div>


{% schema %}
     {
         "name": "Concept Stores",
         "settings": [
            {
                "type": "header",
                "content": "Section Title"
            },
            {
                "type": "text",
                "id": "section_title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "section_subheading",
                "label": "Subheading"
            },
            {
                "type": "richtext",
                "id": "section_paragraph",
                "label": "Paragraph"
            }
         ],
         "blocks": [
             {
                 "type": "stores",
                 "name": "Stores",
                 "settings": [
                     {
                         "type": "text",
                         "id": "title",
                         "label":"Store Name"
                     },
                     {
                          "type": "text",
                          "id": "address",
                          "label":"Store Address"
                     },
                     {
                           "type": "text",
                           "id": "phone",
                           "label":"Phone"
                     },
                    {
                           "type": "checkbox",
                           "id": "show_open_hour",
                           "label":"Show open hour text"
                     },
                     {
                            "type": "richtext",
                            "id": "opening_hours",
                            "label":"Opening Hours"
                     },
                     {
                           "type": "image_picker",
                           "id": "store_image",
                           "label":"Store Image"
                     }
                 ]
             }
         ]
     }
 {% endschema %}
